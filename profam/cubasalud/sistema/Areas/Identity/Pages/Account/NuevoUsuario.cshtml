@page

@{
    ViewData["Title"] = "Registrar nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model RegisterModel

<div class="main-card mb-3 card">
        <div class="card-body">
            <div class="row">
    <div class="col-md-6">
       
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            @Html.ValidationSummary()
            
            <hr />
            @* <div asp-validation-summary="All" class="text-danger"></div> // aqui esta *@
            <div class="col-md-12">
                <label >Correo</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label >Contraseña</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <label >Confirmar contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="col-md-12">
                    <label>Persona</label>
                    <select class="form-control select2bs4-user" style="width: 100%;" asp-for="Input.EmpleadoId"
                        asp-items="@Model.ListaEmpleados" id="empleadoselect">
                        <option selected value="">Sin asignar</option>
                    </select>

                </div>
                <div class="col-md-12">
                    <label>Roles</label>
                    <select class="form-control select2bs4-user" style="width: 100%;" asp-for="Input.RolesId"
                        asp-items="@Model.ListaRoles" id="roleselect">
                        <option selected value="">Sin asignar</option>
                    </select>

                </div>
                </br>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
