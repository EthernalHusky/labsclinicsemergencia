@model sistema.Models.RegisterViewModel;
@{
    ViewData["Title"] = "Register";
}


<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">

<div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
    <div class="main-card mb-3 card">
        <div class="card-body">

            <div class="form-row">
                <div class="col-md-12">
                    <div class="position-relative form-group">
                        <label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Correo/Usuario" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    </div>
            </div>

        <div class="form-row">
            <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label>Contrase単a</label>
                            <input asp-for="Password" class="form-control" placeholder="Contrase単a"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="position-relative form-group">
                         <label>Confirmar Contrase単a</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirmar Contrase単a"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
        </div>

        <div class="form-row">
            <div class="col-md-6">
                             <label>Nombre completo del usuario</label>
                <input asp-for="Nombres" class="form-control" placeholder="Nombres del empleado o persona"/>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                             <label>Nombre completo del usuario</label>
                            @Html.DropDownListFor(m => m.Role, Model.RoleList, new { @class = "form-control" })
            </div>

        </div>
        <br/>
        <div class="form-row">
        <div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}