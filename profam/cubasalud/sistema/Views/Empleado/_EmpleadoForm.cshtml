@model Database.Shared.Models.Empleado

<div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
    <div class="main-card mb-3 card">
        <div class="card-body">

            <div class="form-row">

                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11" class="">Nombre</label>
                        @Html.TextBoxFor(a => a.Nombre, new {@class="form-control",
                                       @placeholder="Nombre Empleado"})
                        @Html.ValidationMessageFor(a => a.Nombre, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11" class="">Apellido</label>
                        @* <input placeholder="DescripciÃ³n Producto" class="form-control"> *@
                        @Html.TextBoxFor(a => a.Apellido, new {@class="form-control",
                                       @placeholder="Apellido"})
                        @Html.ValidationMessageFor(a => a.Apellido, "", new { @class = "text-danger"})
                    </div>
                </div>

               

            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11" class="">Telefono</label>
                        @Html.TextBoxFor(a => a.Telefono, new{ type="number", @class="form-control",
                                       @placeholder="Telefono"})
                        @Html.ValidationMessageFor(a => a.Telefono, "", new { @class = "text-danger"})
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label class="">Telefono 2</label>
                        @Html.TextBoxFor(a => a.Telefono_2, new{ type="number", @class="form-control",
                                       @placeholder="Telefono 2"})
                        @Html.ValidationMessageFor(a => a.Telefono_2, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label class="">Telefono 3</label>
                        @Html.TextBoxFor(a => a.Telefono_3, new{ type="number", @class="form-control",
                                       @placeholder="Telefono 3"})
                        @Html.ValidationMessageFor(a => a.Telefono_3, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label class="">Edad</label>
                        @Html.TextBoxFor(a => a.Edad, new{ type="number", @class="form-control",
                                       @placeholder="Edad"})
                        @Html.ValidationMessageFor(a => a.Edad, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label class="">Dpi</label>
                        @Html.TextBoxFor(a => a.Dpi, new{ type="number",step="any", @class="form-control",
                                       @placeholder="Dpi"})
                        @Html.ValidationMessageFor(a => a.Dpi, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group"><label  class="">Nit</label>  
                        @Html.TextBoxFor(a => a.Nit, new {type="number", @class="form-control",
                                       @placeholder="Nit"})
                        @Html.ValidationMessageFor(a => a.Nit, "", new { @class = "text-danger"})
                    </div>
                </div>
                 <div class="col-md-6">
                    <label>Estado Civil</label>
                    <select class="form-control select2bs4" style="width: 100%;" asp-for="EstadoCivil">
                      <option value="Soltero/a">Soltero/a</option>
                      <option value="Casado/a">Casado/a</option>
                      <option value="Viudo/a">Viudo/a</option>

                    </select>
                   
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label class="">Direccion</label>

                        @Html.TextBoxFor(a => a.Direccion, new{ @class="form-control",
                                       @placeholder="Direccion"})
                        @Html.ValidationMessageFor(a => a.Direccion, "", new { @class = "text-danger"})
                    </div>
                </div>
                 <div class="col-md-6">
                    <label>Tipo de contrato</label>
                    <select class="form-control select2bs4" style="width: 100%;" asp-for="TipoContrato">
                      <option value="Soltero/a">Fijo</option>
                      <option value="Casado/a">Eventual</option>
                      <option value="Viudo/a">Vacacionista</option>

                    </select>
                   
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label class="">Salario</label>

                        @Html.TextBoxFor(a => a.Salario, new{ @class="form-control",
                                       @placeholder="Salario"})
                        @Html.ValidationMessageFor(a => a.Salario, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label class="">Observaciones</label>
                            @* <textarea class="form-control" placeholder="Ingredientes"></textarea> *@
                            @Html.TextAreaFor(a => a.Observaciones,5,500 ,htmlAttributes : new {
                                               @class="form-control ", @placeholder="Observaciones", @style="max-width:100% !important;"})
                            @* @Html.TextAreaFor(a => a.Producto.Descripcion, new { htmlAttributes = new { @class =
                                "form-control"} }) *@
                            @Html.ValidationMessageFor(a => a.Observaciones, "", new { @class = "text-danger"})
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    </div>
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <button class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>