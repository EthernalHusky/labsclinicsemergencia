        <div class="card-body">
            <div class="table-responsive">
                    <table class="mb-0 table table-hover ">
                        <thead>
                        <tr>
                            <th>Correo</th>
                            <th>Nombres del empleado/persona</th>
                            <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>

                            <td> 
                                <a href="@Url.Action("Modificar","Account", new {id = @item.Id})" class="btn btn-warning btn-sm">
                                    Modificar
                                </a>

                                @* <a href="@Url.Action("Modificar","Cliente", new {id = @item.Id})" class="btn btn-danger btn-sm">
