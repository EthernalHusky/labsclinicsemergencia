@model sistema.Models.ServicioBaseViewModel

<div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
    <div class="main-card mb-3 card">
        <div class="card-body">

            <div class="form-row">

                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11" class="">Nombre
                            Servicio</label>
                        @* <input placeholder="DescripciÃ³n Producto" class="form-control"> *@
                        @Html.TextBoxFor(a => a.Servicio.NombreServicio, new {@class="form-control",
                                       @placeholder="Nombre Servicio"})
                        @Html.ValidationMessageFor(a => a.Servicio.NombreServicio, "", new { @class = "text-danger"})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group"><label for="exampleEmail11" class="">Precio 1</label>
                        @* <input placeholder="Precio" class="form-control"> *@
                        @Html.TextBoxFor(a => a.Servicio.Precio, new{ type="number",step="any", @class="form-control",
                                       @placeholder="Precio"})
                        @* @Html.EditorFor(a => a.Producto.Precio, new { htmlAttributes = new { @type = "number",
                            @class="form-control", @placeholder="Precio"}}) *@
                        @Html.ValidationMessageFor(a => a.Servicio.Precio, "", new { @class = "text-danger"})
                    </div>
                </div>
            </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <label class="">Descripcion</label>
                            @* <textarea class="form-control" placeholder="Ingredientes"></textarea> *@
                            @Html.TextAreaFor(a => a.Servicio.Descripcion,5,500 ,htmlAttributes : new {
                                               @class="form-control ", @placeholder="Descripcion", @style="max-width:100% !important;"})
                            @* @Html.TextAreaFor(a => a.Producto.Descripcion, new { htmlAttributes = new { @class =
                                "form-control"} }) *@
                            @Html.ValidationMessageFor(a => a.Servicio.Descripcion, "", new { @class = "text-danger"})
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="position-relative form-group">
                            <button class="btn btn-primary">Guardar</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>