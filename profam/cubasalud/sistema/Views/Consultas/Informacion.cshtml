@model sistema.Models.InfoConsultaViewModel

@{
    // historia del problema
    var HistoriaProblema = Model.Consulta.Historia == null ? "" : @Model.Consulta.Historia.HistoriaProblema;
    var Diagnostico = Model.Consulta.Historia == null ? "" : @Model.Consulta.Historia.Diagnostico;
    var Sintomas = Model.Consulta.Historia == null ? "" : @Model.Consulta.Historia.Sintomas;

    // examen fisico
    var Temperatura = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.Temperatura;
    var FrecuenciaCardiaca = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.FrecuenciaCardiaca;
    var FrecuenciaRespiratoria = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.FrecuenciaRespiratoria;
    var SaturacionOxigeno = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.SaturacionDeOxigeno;
    var PresionArterialIzq = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.PresionArterialBrazoIzquierdo;
    var PresionArterialDer = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.PresionArterialBrazoDerecho;
    var Observaciones = Model.Consulta.ExamenFisico == null ? "" : @Model.Consulta.ExamenFisico.Observaciones;


    
}
<div class="col-md-12">
    <div class="main-card mb-3 card">
        <div class="card-body">
            <div class="text-center">
                <h4 class="text-primary"> Consulta # @Model.Consulta.Id</h4>
            </div>
            <div class="info-detail-c">
                <label class="text-primary">Datos del paciente</label>
                 <a class="btn btn-primary text-white btn-sm">
                    detalle
                </a>
                <br><br>
                <div class="form-row card-header">
                     <div class="col-md-3">
                        <span class="font-weight-bold">Paciente: </span>
                        <span class="text-primary">@Model.Consulta.Citas.Paciente.Nombre</span>
                    </div>
                     <div class="col-md-3">
                        <span class="font-weight-bold">Edad: </span>
                        <span class="text-primary">@Model.Consulta.Citas.Edad</span>

                    </div>
                     <div class="col-md-3">
                        <span class="font-weight-bold">Tel: </span>
                        <span class="text-primary">@Model.Consulta.Citas.Paciente.Telefono</span>
                    </div>
                     <div class="col-md-3">
                        <span class="font-weight-bold">Cel: </span>
                        <span class="text-primary">@Model.Consulta.Citas.Paciente.Celular</span>
                    </div>
                </div>
                <br><br>
                <label class="text-primary">Datos de la consulta</label>
                <a class="btn btn-primary text-white btn-sm">
                    detalle
                </a>
                <br><br>
                 <div class="form-row card-header">
                     <div class="col-md-3">
                        <span class="font-weight-bold">Especialidad: </span>
                        <span class="text-primary">@Model.Consulta.Citas.EspecialidadText</span>
                    </div>
                     <div class="col-md-3">
                        <span class="font-weight-bold">Servicio: </span>
                        <span class="text-primary">@Model.Consulta.Citas.ServicioText</span>

                    </div>
                     <div class="col-md-3">
                        <span class="font-weight-bold">Médico: </span>
                        <span class="text-primary">@Model.Consulta.Citas.EmpleadoText</span>
                    </div>
                </div>

                <br><br>
                 <div class="form-row card-header">
                     <div class="col-md-12">
                        <span class="font-weight-bold">Motivo: 
                        <a asp-action="" asp-controller="" asp-route-id=""> 
                                <i class="fas fa-edit"></i>
                        </a>
                        </span>
                        <br>
                        
                        <span class="text-primary">@Model.Consulta.Citas.Motivo</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">
    <div class="main-card mb-3 card">
        <div class="card-header"><i class="header-icon lnr-license icon-gradient bg-plum-plate"> </i>Historial CLÍNICO
            <div class="btn-actions-pane-right">
                <div class="nav">
                    <a data-toggle="tab" href="#tab-eg2-0" class="btn-pill btn-wide mr-1 ml-1 active btn btn-outline-alternate btn-sm">Historia</a>
                    <a data-toggle="tab" href="#tab-eg2-1" class="btn-pill btn-wide mr-1 ml-1  btn btn-outline-alternate btn-sm">Examen Físico</a>
