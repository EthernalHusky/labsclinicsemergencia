                        </div>
                    }
                    else 
                    {
                    <div class="form-row">
                        <label class="font-weight-bold">Temperatura</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @Temperatura 
                            </p>
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="font-weight-bold">Frecuencia cardíaca</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @FrecuenciaCardiaca
                            </p>
                        </div>
                    </div>

                    <div class="form-row">
                        <label class="font-weight-bold">Frecuencia respiratoria</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @FrecuenciaRespiratoria
                            </p>
                        </div>
                    </div>

                    <div class="form-row">
                        <label class="font-weight-bold">Saturación de oxígeno</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @SaturacionOxigeno
                            </p>
                        </div>
                    </div>

                    <div class="form-row">
                        <label class="font-weight-bold">Presión arterial brazo derecho</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @PresionArterialDer
                            </p>
                        </div>
                    </div>

                    <div class="form-row">
                        <label class="font-weight-bold">Presión arterial brazo izquierdo</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @PresionArterialIzq
                            </p>
                        </div>
                    </div>

                    <div class="form-row">
                        <label class="font-weight-bold">Observaciones o texto adicional</label> &nbsp; &nbsp;
                        <div class="col-md-12">
                            <p>
                                @Observaciones
                            </p>
                        </div>
                    </div>

                    <a asp-controller="Consultas" asp-action="ModificarExamenFisico" asp-route-consultaId="@Model.Consulta.Id" class="btn btn-primary text-white">
                        Editar <i class="fas fa-edit"></i>
                    </a>
